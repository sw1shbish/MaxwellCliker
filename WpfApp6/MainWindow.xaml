<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Name="Counter"></Label>
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="150" Click="Btn_OnClick" Name="Btn">
            <Image VerticalAlignment="Center" HorizontalAlignment="Center" Width="210" Height="210" Source="pictures/Maxwell.png"></Image>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="200"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
   
</Window>
 